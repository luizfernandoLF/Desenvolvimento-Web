    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const deleteConfirmationModal = document.getElementById('deleteConfirmationModal');
        const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
        let currentItemIdToDelete = null;
        let currentDeleteUrl = null;

        if (deleteConfirmationModal) {
          deleteConfirmationModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget; // Botão que disparou a modal
            currentItemIdToDelete = button.getAttribute('data-item-id');
            const itemName = button.getAttribute('data-item-name');
            currentDeleteUrl = button.getAttribute('data-delete-url');

            const modalItemName = document.getElementById('modalItemName');
            if (modalItemName) {
              modalItemName.textContent = itemName;
            }
          });
        }

        if (confirmDeleteBtn) {
          confirmDeleteBtn.addEventListener('click', function () {
            if (currentItemIdToDelete && currentDeleteUrl) {
              fetch(`${currentDeleteUrl}${currentItemIdToDelete}`, {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                }
              })
              .then(response => {
                const modalInstance = bootstrap.Modal.getInstance(deleteConfirmationModal);
                if (modalInstance) {
                    modalInstance.hide();
                }

                if (response.ok) {
                  console.log('Item deletado com sucesso!');
                  window.location.reload();
                } else {
                  response.text().then(errorMessage => {
                    console.error('Erro ao deletar item:', response.status, errorMessage);
                    alert(`Erro ao deletar: ${errorMessage || response.statusText}.`);
                  }).catch(textError => {
                    console.error('Erro ao ler mensagem de erro:', textError);
                    alert('Erro desconhecido ao deletar.');
                  });
                }
              })
              .catch(error => {
                console.error('Erro de rede ao deletar item:', error);
                alert('Erro de rede ao deletar.');
              });
            }
          });
        }
      });
    </script>
