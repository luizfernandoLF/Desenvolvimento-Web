<h1>Editar Usuário</h1>
{{#if error}}
<div class="alert alert-danger" role="alert">
  {{error}}
</div>
{{/if}}
<form action="/user/update/{{user.id}}" method="POST">
  <input type="hidden" name="id" value="{{user.id}}">
  <div class="mb-3">
    <label for="fullname" class="form-label">Nome Completo</label>
    <input type="text" class="form-control" id="fullname" name="fullname" value="{{user.fullname}}" required maxlength="100">
  </div>
  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input type="email" class="form-control" id="email" name="email" value="{{user.email}}" required maxlength="100">
  </div>
  <div class="mb-3">
    <label for="major_id" class="form-label">Curso</label>
    <select class="form-select" id="major_id" name="major_id" required>
      <option value="">Selecione um curso</option>
      {{#each majors}}
      <option value="{{id}}" {{#if (eq id ../user.major_id)}}selected{{/if}}>{{code}} - {{name}}</option>
      {{/each}}
    </select>
  </div>
  <button type="submit" class="btn btn-success">Salvar Alterações</button>
  <a href="/user/read/{{user.id}}" class="btn btn-secondary">Cancelar</a>
</form>